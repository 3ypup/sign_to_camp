
<div class="alert alert-secondary mx-auto" style="width: 350px;" role="alert">

<h2>Зарегистрироваться</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :почта %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :пароль %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "новый пароль" %>
  </div>

  <div class="field">
    <%= f.label :подтверждение_пароля %><br />
    <%= f.password_field :password_confirmation, autocomplete: "новый пароль" %>
  </div>

  <div class="actions">

    <%= f.submit "Зарегистрироваться" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>